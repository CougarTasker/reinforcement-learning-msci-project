{
    "grammarly.config.documentDialect": "british",
    "grammarly.config.documentDomain": "academic",
    "grammarly.files.include": [
        "**/readme.md",
        "**/README.md",
        "**/*.txt",
        "**/*.tex"
    ],
    "cSpell.language": "en-GB",
    "cSpell.words": [
        "astype",
        "backpropagation",
        "chratrisitcs",
        "color",
        "colors",
        "columnspan",
        "Daka",
        "docstrings",
        "dtype",
        "fastmath",
        "finfo",
        "flaticon",
        "fromarray",
        "linters",
        "ndarray",
        "njit",
        "nopython",
        "numba",
        "numpy",
        "padx",
        "pady",
        "pipx",
        "relx",
        "RHUL",
        "softmax",
        "tkinter",
        "tktooltip",
        "venv"
    ],
    "cSpell.files": [],
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/.coverage": false,
        "**/.mypy_cache": true
    },
    "python.testing.pytestArgs": [
        "code/tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.defaultInterpreterPath": "${workspaceFolder}/code/.venv/bin/python",
    "python.pythonPath": "${workspaceFolder}/code/.venv/bin/python",
    // "python.testing.cwd": "${workspaceFolder}/code",
    "python.envFile": "${workspaceFolder}/code/.env",
    "flake8.args": [
        "--config=${workspaceFolder}/code/setup.cfg"
    ],
    "flake8.cwd": "${workspaceFolder}/code",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.typeCheckingMode": "basic",
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
    },
    "isort.args": [
        "--settings-file",
        "${workspaceFolder}/code/pyproject.toml"
    ],
    "yaml.schemas": {
        "https://squidfunk.github.io/mkdocs-material/schema.json": "mkdocs.yml"
    },
    "grammarly.selectors": [
        {
            "language": "latex",
            "scheme": "file"
        }
    ]
}